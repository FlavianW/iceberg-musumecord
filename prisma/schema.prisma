// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // AJOUTE CETTE LIGNE :
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Suggestion {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
}